<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F9F9F9"
    android:padding="16dp">

    <!-- Header with Date and Class Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“… 10th July 2025"
            android:textSize="16sp"
            android:textColor="#333333" />

        <TextView
            android:id="@+id/tvClassName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ§  Basic of Geometry Class"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Present / Absent summary -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/tvPresentCount"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#E0F7E9"
            android:text="âœ” 0 Present"
            android:textColor="#2E7D32"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_margin="4dp" />

        <TextView
            android:id="@+id/tvAbsentCount"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#FFEBEE"
            android:text="âŒ 0 Absent"
            android:textColor="#C62828"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_margin="4dp" />
    </LinearLayout>

    <!-- Attendance List -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:id="@+id/attendanceContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <!-- Confirm Button -->
    <Button
        android:id="@+id/btnSubmitAttendance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm &amp; Submit Attendance"
        android:textAllCaps="false"
        android:layout_marginTop="16dp"
        android:backgroundTint="#3F51B5"
        android:textColor="#FFFFFF"
        android:padding="12dp" />

</LinearLayout>
